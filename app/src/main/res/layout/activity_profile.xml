<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".Profile"
    app:cardElevation="3dp"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_prof"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            />
        <ProgressBar
            android:id="@+id/prof_progressBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="true"
            android:layout_below="@id/iv_prof"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_prof_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/iv_prof"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_edit_white_36dp" /></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/pcv_1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/pll_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/ptv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="14sp" />
                <TextView
                    android:layout_below="@+id/ptv1"
                    android:id="@+id/tv_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/prof_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ptv1"
                    android:hint="First Name"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pcv_2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/pll_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/ptv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textSize="14sp" />
                <TextView
                    android:layout_below="@+id/ptv2"
                    android:id="@+id/tv_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextPrimary"
                    />
                <EditText
                    android:layout_below="@id/ptv2"
                    android:id="@+id/prof_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:visibility="gone"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            >
            <RelativeLayout
                android:id="@+id/pll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/ptv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No."
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_below="@+id/ptv"
                    android:id="@+id/tv_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile No."
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"/>
                <EditText
                    android:layout_below="@+id/ptv"
                    android:id="@+id/prof_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:maxLength="10"
                    android:inputType="numberDecimal"
                    android:hint="Enter your Mobile No."
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:id="@+id/pll_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/ptv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email id"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_below="@+id/ptv3"
                android:id="@+id/prof_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email id"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:id="@+id/pll_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/ptv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MyKnot Gaming Name"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_below="@id/ptv4"
                android:id="@+id/prof_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:hint="Enter your MyKnot Gaming Username"
                android:textSize="16sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:id="@+id/pll_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ptv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUBG Username"
                android:textSize="14sp" />
            <TextView
                android:layout_below="@id/ptv5"
                android:id="@+id/tv_pubg_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary"
                />
            <EditText
                android:layout_below="@+id/ptv5"
                android:id="@+id/pubg_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="Enter your PUBG Username"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:id="@+id/pll_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ptv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COD Username"
                android:textSize="14sp" />
            <TextView
                android:layout_below="@+id/ptv6"
                android:id="@+id/tv_cod_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary"
                />
            <EditText
                android:layout_below="@id/ptv6"
                android:id="@+id/cod_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your COD Username"
                android:visibility="gone"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:id="@+id/pll_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/ptv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 3 Username"
                android:textSize="14sp" />
            <TextView
                android:layout_below="@id/ptv7"
                android:id="@+id/tv_game3_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary"
                />
            <EditText
                android:id="@+id/game3_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ptv7"
                android:hint="Enter your Game 3 Username"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_prof_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_exit_to_app_black_24dp"
            android:rotation="180"
            android:textColor="@color/colorPrimary"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_prof_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:src="@drawable/ic_save_black_24dp"
            />

    </RelativeLayout>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/prof_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"  />
</RelativeLayout>